script/source = "extends Area

onready var boundaries = get_node( \"Boundaries\" )
onready var boundary_extents = boundaries.shape.extents

var asteroid = preload( \"res://Actors/Asteroid.tscn\" )

var linear_speed = 0

func _physics_process( delta ):
	translation.x -= linear_speed * delta

func spawn_asteroids( spawn_positions, speed ):
	for position in spawn_positions:
		var spawned_asteroid = asteroid.instance()
		spawned_asteroid.translate( Vector3( 0, position, 0 ) )
		add_child( spawned_asteroid )
	linear_speed = speed

func get_asteroids_number():
	return get_child_count() - 1"

